{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true
  },
  "rules": {
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "no-undefined": [2],
    "brace-style": [2, "1tbs"],
    "camelcase": [2],
    "comma-spacing": [2, { "before": false, "after": true }],
    "line-comment-position": [2, "above"],
    "no-lonely-if": [2],
    "no-unused-vars": ["off"],
    "react/prop-types": "off"
  }
}
